@page "/destinations/{PrimaryDestinationToken}"
@page "/destinations/{PrimaryDestinationToken}/{SecondaryDestinationToken}"
@page "/destinations/{PrimaryDestinationToken}/{SecondaryDestinationToken}/{TertiaryDestinationToken}"
